<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.github.CSCE4444ElectronicRestrauntSystem.RewardsGameWin"
    android:background="#99ffc610">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Congratulations! You&apos;ve won $10 off your next visit! Enter your rewards club information below to redeem."
        android:id="@+id/tvRewardsGameWinner"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/ivRewardsWinnerAce"
        android:src="@drawable/ace"
        android:layout_below="@+id/tvRewardsGameWinner"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:maxLines="1"
        android:singleLine="true"
        android:ems="10"
        android:id="@+id/etRewardsWinPassword"
        android:layout_below="@+id/ivRewardsWinnerAce"
        android:layout_alignRight="@+id/tvRewardsGameWinner"
        android:layout_alignEnd="@+id/tvRewardsGameWinner" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etRewardsWinUsername"
        android:layout_alignBottom="@+id/etRewardsWinPassword"
        android:layout_alignParentLeft="true"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_alignParentStart="true"
        android:hint="Username"
        android:layout_toLeftOf="@+id/ivRewardsWinnerAce"
        android:layout_toStartOf="@+id/ivRewardsWinnerAce" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/bSubmitRewardsWinner"
        android:layout_below="@+id/etRewardsWinPassword"
        android:layout_alignRight="@+id/etRewardsWinPassword"
        android:layout_alignEnd="@+id/etRewardsWinPassword" />
</RelativeLayout>
