<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.github.CSCE4444ElectronicRestrauntSystem.MainActivity"
    android:background="#99ffc610">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etUserName"
                android:hint="Username"
                android:ems="12"
                android:maxLines="1"
                android:singleLine="true"
                style="@android:style/Widget.Holo.Light.EditText" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="12"
                android:id="@+id/etPassword"
                android:hint="Password"
                android:maxLines="1"
                android:singleLine="true"
                style="@android:style/Widget.Holo.Light.EditText" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="New User"
                    android:id="@+id/bCreateNewUser"
                    android:layout_weight="1"
                    style="@android:style/Widget.Holo.Light.Button" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:id="@+id/bCreateUserInfo"
                    android:layout_weight="1"
                    style="@android:style/Widget.Holo.Light.Button" />

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Really Awesome Burgers"
        android:id="@+id/textView2"
        android:layout_gravity="bottom"
        android:textColor="#e63a2a"
        android:textStyle="bold|italic" />

</LinearLayout>
