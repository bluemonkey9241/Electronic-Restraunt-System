<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.github.CSCE4444ElectronicRestrauntSystem.MenuMain"
    android:background="#99ffc610">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Appetizers"
                android:id="@+id/bAppetizers"
                android:gravity="left|center_vertical"
                android:onClick="switchCategory"
                style="@android:style/Widget.Holo.Light.Button" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Favorites"
                android:id="@+id/bFavorites"
                android:gravity="left|center_vertical"
                android:onClick="switchCategory"
                style="@android:style/Widget.Holo.Light.Button" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entrees"
                android:id="@+id/bEntrees"
                android:gravity="left|center_vertical"
                android:onClick="switchCategory"
                style="@android:style/Widget.Holo.Light.Button" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kids&apos; Menu"
                android:id="@+id/bKidsMenu"
                android:gravity="left|center_vertical"
                style="@android:style/Widget.Holo.Light.Button"
                android:onClick="switchCategory"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desserts"
                android:id="@+id/bDesserts"
                android:gravity="left|center_vertical"
                android:onClick="switchCategory"
                style="@android:style/Widget.Holo.Light.Button" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Drinks"
                android:id="@+id/bDrinks"
                android:gravity="left|center_vertical"
                android:onClick="switchCategory"
                style="@android:style/Widget.Holo.Light.Button" />
        </LinearLayout>

        <ListView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/lvMenu" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Really Awesome Burgers"
            android:id="@+id/textView"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:textColor="#e63a2a"
            android:textStyle="bold|italic" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call Server / Refills"
            android:id="@+id/bCallServer"
            style="@android:style/Widget.Holo.Light.Button"
            android:onClick="callServer" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit or Submit Order"
            android:id="@+id/bOrder"
            style="@android:style/Widget.Holo.Light.Button"
            android:onClick="submitOrder" />

    </LinearLayout>

</LinearLayout>
