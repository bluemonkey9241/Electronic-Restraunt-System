<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.github.CSCE4444ElectronicRestrauntSystem.ServerTableOrder"
    android:background="#99ffc610"
    android:weightSum="1">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="299dp"
        android:id="@+id/lvTableOrder"
        android:layout_weight="0.70" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total Price: $0.00"
        android:id="@+id/tvTotalPrice"
        android:gravity="right" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            style="@android:style/Widget.Holo.Light.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:id="@+id/bMenu"
            android:onClick="submitOrder" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Order"
            android:id="@+id/bSubmitOrder"
            style="@android:style/Widget.Holo.Light.Button"
            android:onClick="submitOrder" />

        <Button
            style="@android:style/Widget.Holo.Light.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay"
            android:id="@+id/bPay"
            android:onClick="submitOrder" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Really Awesome Burgers"
        android:id="@+id/textView"
        android:textColor="#e63a2a"
        android:textStyle="bold|italic"
        android:layout_weight="0.42" />

</LinearLayout>